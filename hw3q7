   public static boolean isDecimalHarshad(int num) {
        if (num <= 0) {
            return false; 
        }

        int sumOfDigits = 0;
        int temp = num;

        while (temp > 0) {
            sumOfDigits += temp % 10;
            temp = temp / 10;
        }

        return num % sumOfDigits == 0;
    }
